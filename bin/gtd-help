echo ""
echo ""
echo "TASK MANAGEMENT"
echo ""
echo "  nt/newtask 'SUBJECT' - create new task with subject SUBJECT"
echo "  dt/deltask TASKID    - delete task with id TASKID"
echo "  go TASKID            - place me in folder for TASKID"
echo "  list                 - list tasks and their subject in numerical order, low to high"
