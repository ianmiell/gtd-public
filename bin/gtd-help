echo ""

echo "TASK STATUS MANAGEMENT"
echo ""
echo "  ms/move-status background TASKID - move task TASKID to 'background' status"
echo "  ms/move-status closed TASKID     - move task TASKID to 'closed' status"
echo "  ms/move-status new TASKID        - move task TASKID to 'new' status"
echo "  ms/move-status someday TASKID    - move task TASKID to 'someday' status"
echo "  ms/move-status todo TASKID       - move task TASKID to 'todo' status"
echo "  ms/move-status waiting TASKID    - move task TASKID to 'waiting' status"
echo ""

echo "TASK LISTING"
echo ""
echo "  d/dash/dashboard - dashboard of tickets"
echo ""
echo "  p    - list tickets in high priority and todo"
echo "  np   - list tickets in non-high priority and todo"
echo ""
echo "  b/background - list tickets in 'background' status"
echo "  c/closed     - list tickets in 'closed' status"
echo "  n/new        - list tickets in 'new' status"
echo "  s/someday    - list tickets in 'someday' status"
echo "  t/todo       - list tickets in 'todo' status"
echo "  w/waiting    - list tickets in 'waiting' status"
echo ""

echo "TASK PRIORITY MANAGEMENT"
echo ""
echo "  mp/move-priority low TASKID    - move task TASKID to 'low' priority"
echo "  mp/move-priority medium TASKID - move task TASKID to 'medium' priority"
echo "  mp/move-priority high TASKID   - move task TASKID to 'high' priority"
echo ""

echo "REMINDERS"
echo ""
echo " remind TASKID      - remind me about ticket"
echo " check-reminders    - check for reminders and send mails"
