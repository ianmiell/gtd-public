echo " people-reminders   - check for contact-people reminders and send mails"
echo ""

echo "DASHBOARD"
echo ""
echo "  dash/dashboard - dashboard of tickets"
echo ""

echo "SEARCH"
echo ""
echo "  search 'TEXT' - search tickets for text"
echo ""

